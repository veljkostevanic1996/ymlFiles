pipeline{

    agent any

    stages{

        stage('clone'){

            steps{

                //sh 'cd /home/vstevanic/Desktop/Test && git clone https://veljkostevanic1996:Veljkostevanic123@github.com/brki18/devops_web_goat.git'
                 checkout scm: ([
                    $class: 'GitSCM',
                    userRemoteConfigs: [credentialsId: '1', url: 'https://github.com/brki18/devops_web_goat.git'],
                    branches: [name: 'master']
                ])
            }
        }

        stage('add permisions'){

            steps{

                sh 'sudo chmod -R 777 /home/vstevanic/Desktop/web-goat-copy/'
            }
        }
    }
}